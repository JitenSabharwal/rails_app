<h1>Form_for</h1>
<%=form_for :form , url: forms_path  do|f| %>
	<%= f.label :name   %>
	<%= f.text_field :name ,class: "form-control" %>
	<br>
	<%= f.label :age   %>
	<%= f.text_field :age ,class: "form-control"%>
	<br>
	<%= f.label :email   %>
	<%= f.text_field :email ,class: "form-control"%>
	<br>
	<%= f.submit  "Create", class: "btn btn-primary" %>
<% end %>